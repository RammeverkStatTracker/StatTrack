<Page
    x:Class="StatTrack.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StatTrack"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <!--TextBlocks-->
        <TextBlock x:ConnectionId='2' Name="FrontPageTitle" TextAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0" Text="Frontpage Title" TextWrapping="Wrap" VerticalAlignment="Top" Height="486" Width="1495"                                               FontSize="100"/>
        <TextBlock x:ConnectionId='3' HorizontalAlignment="Left" Margin="390,507,0,0" Text="Username :" TextWrapping="Wrap" VerticalAlignment="Top"                                                 FontSize=" 40"/>
        <TextBlock x:ConnectionId='4' Name="UserNameDisplay"  HorizontalAlignment="Left" Margin="643,694,0,0" Text="Stats Will show here." TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='5' Name="TestInfdoOnline"  HorizontalAlignment="Left" Margin="23,520,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="118" Width="209" Text="
   Usernames to online database.
                   Bass4Nation_B4N == Origin
                   Die-Reichtangle == Origin
                   Bass4Nation_YT == Playstation 4
                   Nadaeu == Xbox
                   " RenderTransformOrigin="0.488,1.271" 
                   />
        <TextBlock x:ConnectionId='6' Name="TestInfoLocal"  HorizontalAlignment="Left" Margin="25,647,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="118" Width="209" Text="
   Usernames to Local database.
                   Bass4Nation_B4N == Origin
                   FyzzyCookie == Origin
                   MoneyCannon == Playstation 4
                   Slopeiz == Xbox
                   " 
                   />
        <TextBlock x:ConnectionId='7' Name="KillsDisplay"  HorizontalAlignment="Left" Margin="643,722,0,0" Text="Kills" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="597,722,0,0" Text="Kills : " TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='8' Name="DeathDisplay"  HorizontalAlignment="Left" Margin="643,746,0,0" Text="Death" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="585,746,0,0" Text="Death : " TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="1.75,0.474"/>
        <TextBlock x:ConnectionId='9' Name="LastPlayedCharacter"  HorizontalAlignment="Left" Margin="643,766,0,0" Text="Character" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="501,766,0,0" Text="Character Last used :" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <!--TextBoxes-->
        <TextBox x:ConnectionId='10' Name="Username" HorizontalAlignment="Left" Margin="590,520,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="40" Width="235"                             RenderTransformOrigin="0.511,-0.778"/>
        <!--Buttons-->
        <Button x:ConnectionId='11' Content="Search" Margin="672,643,0,0" VerticalAlignment="Top"                            />

        <!-- ComboBox-->
        <ComboBox x:ConnectionId='12'  x:Name="PlayerPlatform" Header="Platform" PlaceholderText="Choose a platform" Width="200" Margin="610,575,0,0"                                                    RenderTransformOrigin="3.175,3.909">
            <x:String>Origin</x:String>
            <x:String>Playstation 4</x:String>
            <x:String>Xbox</x:String>
        </ComboBox>
        <ComboBox x:ConnectionId='13'  x:Name="DatabaseChoosen" Header="Database" PlaceholderText="Choose a Database" Width="200" Margin="390,575,0,0"                                              RenderTransformOrigin="3.175,3.909">
            <x:String>Local</x:String>
            <x:String>Online</x:String>
        </ComboBox>

    </Grid>
</Page>

