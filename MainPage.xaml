<Page
    x:Class="StatTrack.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StatTrack"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
         <!--TextBlocks-->
        <TextBlock HorizontalAlignment="Left" Margin="553,47,0,0" Text="StatTrack" TextWrapping="Wrap" VerticalAlignment="Top" Height="219" Width="420" SelectionChanged="TextBlock_SelectionChanged" FontSize="100"/>
        <TextBlock HorizontalAlignment="Left" Margin="287,457,0,0" Text="Username :" TextWrapping="Wrap" VerticalAlignment="Top" SelectionChanged="TextBlock_SelectionChanged_1" FontSize=" 40"/>
        <!--TextBoxes-->
        <TextBox Name="Username" HorizontalAlignment="Left" Margin="495,441,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="86" Width="235" TextChanged="UsernameInput"/>
        <!--Buttons-->
        <Button Content="Search" Margin="582,550,0,0" VerticalAlignment="Top" Click="Button_Click"/>
       <!-- Checkboxes-->
        <CheckBox Content="PC" Margin="735,437,0,0" VerticalAlignment="Top"/>
        <CheckBox Content="PlayStation 4" Margin="735,469,0,0" VerticalAlignment="Top"/>
        <CheckBox Content="Xbox" Margin="735,500,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
